<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/report_bg">

    <!-- EditText for entering the issue title -->
    <EditText
        android:id="@+id/issue_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Issue Title"
        android:textColorHint="#E4D643"
        android:fontFamily="@font/aovelsansroundedrddl"
        android:inputType="text" />

    <!-- EditText for providing the description of the issue -->
    <EditText
        android:id="@+id/issue_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Issue Description"
        android:textColorHint="#E4D643"
        android:fontFamily="@font/aovelsansroundedrddl"
        android:inputType="textMultiLine"
        android:lines="5"
        android:gravity="top" />

    <!-- Button to submit the report -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#5CF6C8"
        android:textColor="#673AB7"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="@font/aovelsansroundedrddl"
        android:text="Report Issue" />
</LinearLayout>
