<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebg1"
    tools:context=".MainActivity">

    <!-- ToggleButton -->

    <!-- ScrollView -->

    <ToggleButton
        android:id="@+id/toggleDrivingMode"
        android:layout_width="169dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/toggle_button_background"
        android:checked="false"
        android:textColor="#FF0505"
        android:textStyle="bold"
        android:textOff="Driving Mode Off"
        android:textOn="Driving Mode On"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toggleDrivingMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ImageView for Accident Awareness -->


            <!-- TextView for Accident Details -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accident Details"
                android:textSize="27dp"
                android:textStyle="bold"
                android:fontFamily="@font/aovelsansroundedrddl"
                android:textColor="#F80808"
                android:paddingTop="8dp"/>

            <!-- TextView for Accident Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textSize="16sp"
                android:fontFamily="@font/aovelsansroundedrddl"
                android:textColor="#3BE5F4"
                android:lineSpacingExtra="4dp"

                android:text="• Always Wear a Seatbelt: Ensure that everyone in the vehicle is buckled up." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/aovelsansroundedrddl"
                android:textColor="#3BE5F4"
                android:text="• Avoid Over Speeding: Drive within speed limits, especially in residential and school zones." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/aovelsansroundedrddl"
                android:textColor="#3BE5F4"
                android:text="• Never Drive Under Influence: Avoid driving when under the influence of alcohol or drugs." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/aovelsansroundedrddl"
                android:textColor="#3BE5F4"
                android:text="• Stay Focused: Avoid distractions such as using a mobile phone or eating while driving." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/aovelsansroundedrddl"
                android:textColor="#3BE5F4"
                android:text="• Use Indicators: Always signal before turning, changing lanes, or stopping." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/aovelsansroundedrddl"
                android:textColor="#3BE5F4"
                android:text="• Follow Traffic Rules: Respect red lights, stop signs, and pedestrian crossings." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/aovelsansroundedrddl"
                android:textColor="#3BE5F4"
                android:text="• Maintain Your Vehicle: Regularly check brakes, tires, lights, and engine health." />


            <!-- ImageView for Traffic Awareness -->
            <ImageView
                android:id="@+id/imageViewExample"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/roadsafty"
                android:contentDescription="Example image for traffic safety" />




            <!-- TextView for Traffic Rules -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Traffic Rules and Caution"
                android:textColor="#FD1504"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp"/>

            <!-- TextView for Traffic Rules Details -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details about traffic rules, cautions, and general safety guidelines..."
                android:paddingTop="4dp"
                android:textColor="#F0EC06"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#F20D0D"
                android:text="Traffic Rules and Safety Guidelines" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/aovelsansroundedrddl"
                android:textColor="#3BE5F4"
                android:text="• Follow speed limits: Drive within prescribed speed limits to avoid accidents." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/aovelsansroundedrddl"
                android:textColor="#3BE5F4"
                android:text="• Obey traffic signals: Respect traffic lights, stop signs, and pedestrian crossings." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/aovelsansroundedrddl"
                android:textColor="#3BE5F4"
                android:text="• Wear seat belts: Ensure all passengers wear seat belts at all times." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/aovelsansroundedrddl"
                android:textColor="#3BE5F4"
                android:text="• Avoid distractions: Do not use mobile phones or other devices while driving." />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
